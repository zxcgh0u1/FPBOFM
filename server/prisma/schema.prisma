generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int                @id @default(autoincrement())
  email        String             @unique
  username     String
  passwordHash String
  wallet       Wallet?
  creatures    CreatureInstance[]
  tasks        UserTask[]

  // связи с боями
  battlesAsA   Battle[]           @relation("BattlePlayerA")
  battlesAsB   Battle[]           @relation("BattlePlayerB")
  battlesWon   Battle[]           @relation("BattleWinner")

    dailyClaimedAt DateTime?

}

model Wallet {
  id     Int  @id @default(autoincrement())
  balance Int   @default(0)
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model CreatureSpec {
  id      Int       @id @default(autoincrement())
  name    String
  rarity  String
  baseHP  Int
  baseATK Int
  baseDEF Int
  gallery Gallery[]
  instances CreatureInstance[]
}

model CreatureInstance {
  id       Int          @id @default(autoincrement())
  ownerId  Int
  specId   Int
  stars    Int          @default(1)
  hp       Int
  atk      Int
  def      Int
  owner    User         @relation(fields: [ownerId], references: [id])
  spec     CreatureSpec @relation(fields: [specId], references: [id])
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  reward      Int
  userTasks   UserTask[]
}

model UserTask {
  id     Int   @id @default(autoincrement())
  userId Int
  taskId Int
  done   Boolean @default(false)
  user   User   @relation(fields: [userId], references: [id])
  task   Task   @relation(fields: [taskId], references: [id])
}

model Battle {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  // Игроки
  playerA   Int
  playerB   Int
  winnerId  Int?

  playerAUser User   @relation("BattlePlayerA", fields: [playerA], references: [id])
  playerBUser User   @relation("BattlePlayerB", fields: [playerB], references: [id])
  winner      User?  @relation("BattleWinner", fields: [winnerId], references: [id])
}


model Gallery {
  id     Int          @id @default(autoincrement())
  specId Int
  spec   CreatureSpec @relation(fields: [specId], references: [id])
}
